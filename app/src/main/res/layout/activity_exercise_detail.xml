<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_color"
    tools:context=".ExerciseDetailActivity">

    <TextView
        android:id="@+id/idTVExerciseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="4dp"
        android:text="Exercise Name"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="@font/abel"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="4dp"


        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/idTVExerciseName"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/idExerciseLAV"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@color/back_color"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>

            <!-- to display calories-->
            <TextView
                android:id="@+id/idTVCalories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Calories"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/abel"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <!-- to display calories-->
            <TextView
                android:id="@+id/idTVTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Time"
                android:textColor="@color/white"
                android:fontFamily="@font/abel"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <!-- To display description-->
            <TextView
                android:id="@+id/idTVDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Description"
                android:textColor="@color/white"
                android:fontFamily="@font/abel"
                android:textSize="18sp"
                />

            

        </LinearLayout>
    </ScrollView>

</RelativeLayout>